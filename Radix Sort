#include<stdio.h>
#include<stdlib.h>

typedef struct head{
    
    struct radix * start;
    struct radix * solution;
    int count;
    
}head;

typedef struct radix{
    
    struct radix * next;
    int data;

}radix;

head * createlistheader(){
    
    head * nodepointer;
    nodepointer = (head*)malloc(sizeof(head));
    nodepointer->start = NULL; 
    nodepointer->solution = NULL;
    nodepointer->count = 0;
    return nodepointer;
    
}

radix * createnode(int value){
    
    radix * node;
    node = (radix*) malloc (sizeof(radix));
    node->next = NULL;
    node->data = value;
    return node;
    
}

void insert(radix * node, radix * temp, int element){

    while(temp->next != NULL){
        
        temp = temp->next;
    }
    
    temp->next = node;
    return;
}

void display(radix * node){
    
    while(node != NULL){
        
        printf("%d\n", node->data);
        node = node->next;
    }
}

void check(head * nodepath, radix * temp, radix * node, int number){
    
    radix * prev, * start;
    int totalnumber;
    start = temp;
    
    while(temp->data < number && totalnumber< nodepath->count){
    
        prev = temp;
        temp = temp->next;
        totalnumber = totalnumber + 1;
        
        if(temp == NULL){
            break;
        }
        
    }
    
    while(start != prev){
        
        start->data = start->next->data;
        start = start->next;
    }
    
    prev->next = node;
    node->next = temp;
    return;
    
}

radix * isEmpty(radix * node, radix * temp){
    
    if(temp == NULL){
        
        return node;
    }
    
    return temp;
}


void radixsort(radix * node, head * nodepointer){
    
    radix * temp, * start, * sol;
    start = node;
    int k = 10, number;
    
    while(k <= 1000){
            
        while(start != NULL){
            
            number = start->data;
            number = number % k;
            sol = createnode(number);
            
            nodepointer->count = nodepointer->count + 1;
            
            if(nodepointer->count == 1){
                nodepointer->solution = isEmpty(sol, nodepointer->solution);
            }
            
            else{
                
                check(nodepointer, nodepointer->solution, sol, number);
        
            }
           
            start = start->next;
        }
        
    start = node;
    k = k * 10;
    
    }
    
    display(nodepointer->solution);
}   

int main(){
 
    radix * node;
    head * nodepointer;
    int i, j, k = 1, temp, element, n;
    
    nodepointer = createlistheader();
    printf("Enter number of elements\n");

    node = createnode(103);
    nodepointer->start = isEmpty(node, nodepointer->start);
    
    node  = createnode(108);
    nodepointer->start = isEmpty(node, nodepointer->start);
    node  = createnode(124);
    insert(node, nodepointer->start, 124);
    node = createnode(117);
    insert(node, nodepointer->start, 117);
    node = createnode(105);
    insert(node, nodepointer->start, 105);
    node = createnode(108);
    insert(node, nodepointer->start, 108);

    display(nodepointer->start);
    radixsort(nodepointer->start, nodepointer);
}
